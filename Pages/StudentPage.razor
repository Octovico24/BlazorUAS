@page "/studentpage"

<h3>Student List</h3>

@if(Student == null){
    <div class="spinner"></div>
}
else {
    <div class="card-deck">
        @foreach (var stud in Student)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@stud.FirstName @stud.LastName</h3>
                </div>
                <div class="card-footer text-center">
                    <a href="@($"studentdetail/{stud.StudentId}")" class="btn btn-primary m-1">View</a>
                    <a href="@($"editstudent/{stud.StudentId}")" class="btn btn-warning m-1">Edit</a>
                    <a href="@($"deletestudent/{stud.StudentId}")" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
}